%tr
  %td
    =select_tag 'ctype', options_from_collection_for_select(@ctypes, :first, :last, '2')
  %td
    =select_tag "criteria", options_from_collection_for_select(@criterias, "name", "to_html_string"), url_disease: diseases_path(), url_drug: select_index_drugs_path()
    .custom_criteria.hide
      =text_field_tag "customRestriction"
  %td
    =text_field_tag "description"
  %td.icons
    =image_tag("sign-check", alt: "Guardar Criterio", class: "icon click create_criteria", url: drug_criterias_path(@drug))
    =image_tag("sign-error", alt: "Eliminar Criterio", class: "icon click cancel_criteria")

